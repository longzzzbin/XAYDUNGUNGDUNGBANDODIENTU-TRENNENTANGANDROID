<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="#F8F9FF">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/iddonhang"
                    android:textSize="20dp"
                    android:text="ID đơn hàng: 1"
                    android:textColor="#F44336"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />

                <TextView
                    android:id="@+id/huydon"
                    android:textSize="18sp"
                    android:text="Hủy đơn"
                    android:textStyle="italic"
                    android:textColor="#fff"
                    android:background="#3F51B5"
                    android:padding="10dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/recyclerview_chitiet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/item_tongtiendonhang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Tổng tiền: 25000"
                android:textColor="#3F51B5"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/trangthai"
                android:textSize="18sp"
                android:text="Trạng thái: Đơn hàng chờ xác nhận"
                android:textStyle="italic"
                android:textColor="#3F51B5"
                android:background="#EBF490"
                android:padding="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>